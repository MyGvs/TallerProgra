<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fuzzyapps.tallerprogra.firstFragment">
    <TextView
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRO DE EQUIPOS"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/individualF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="INDIVIDUAL FEMENINO"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textButtons"
            android:theme="@style/MaterialButton"/>
        <Button
            android:id="@+id/doblesF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="DOBLES FEMENINO"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textButtons"
            android:theme="@style/MaterialButton"/>
        <Button
            android:id="@+id/individualM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="INDIVIDUAL MASCULINO"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textButtons"
            android:theme="@style/MaterialButton"/>
        <Button
            android:id="@+id/doblesM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="DOBLES MASCULINO"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textButtons"
            android:theme="@style/MaterialButton"/>
        <Button
            android:id="@+id/doblesMix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="88dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="DOBLES MIXTOS"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/textButtons"
            android:theme="@style/MaterialButton"/>
    </LinearLayout>

</RelativeLayout>
